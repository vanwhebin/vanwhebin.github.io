<article>
  <h1 class="text-center">
    <%= page.title %>
  </h1>
  <div class="text-center top-gap">
    <%- partial('post_meta', { post: page }) %>
  </div>
  <div class="top-gap-big">
    <%- page.content %>
  </div>
</article>
<%- ____(theme.post.append) %>
<div class="top-gap-big text-center text-muted">
  <small>
    <i class="czs-tag-l"></i>
    <%-
      page.tags.map((tag) =>
        `<a class="text-muted" href="${url_for(tag.path)}">${tag.name}</a>`).join(' , ')
    %>
  </small>
</div>
